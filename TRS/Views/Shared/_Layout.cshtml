<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TRS -Southern Mail Service Inc.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @*Add font awesome to project include our kit key*@
    <script src="https://kit.fontawesome.com/d926a57c1a.js"></script>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>TRS</h3>
                <h4>Main Menu</h4>
            </div>
            <ul class="list-unstyled components">
                @*<p>Dummy Heading</p>*@
                <li class="nav-item"><a href="/Home/Index" class="nav-link">Home</a></li>
                @*<li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home Drop Down</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="#">Home 1</a>
                        </li>
                        <li>
                            <a href="#">Home 2</a>
                        </li>
                        <li>
                            <a href="#">Home 3</a>
                        </li>
                    </ul>
                </li>*@
                @*<li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>*@
                <li class="nav-item"><a href="/FrequencyHeaders/Index" class="nav-link">Frequency Info</a></li>
                @*<li class="nav-item"><a href="#" class="nav-link">Menu Line Item</a></li>*@
                <li>
                    @*<a href="#">About</a>*@
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Maintenance</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li><a href="#">Drivers</a></li>
                        <li><a href="#">Location</a></li>
                        <li><a href="#">Users</a></li>
                        <li><a href="#">Holidays</a></li>
                        <li><a href="#">Stops</a></li>
                        <li><a href="#">Terminals</a></li>
                    </ul>
                </li>
                @*<li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>*@
            </ul>
            <p class="footer">&copy; @DateTime.Now.Year - Southern Mail Service Ltd.</p>
        </nav>
        <!-- Page Content Holder -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Home/About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Contact">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Logout</a>
                            </li>
                            @*<li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>*@
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });
    </script>
</body>
</html>
